@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SOAC_RKU</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SOAC_RKU.styles.css" asp-append-version="true" />

    @*Google Fonts*@
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">


    @*main css file*@
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/CustomFile.css" rel="stylesheet" asp-append-version="true">



</head>
<body>
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center">

            <h1 class="logo me-auto"><a href="#">RKU SOAC</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a asp-action="Index" asp-controller="Home" class="active">Home</a></li>

                    <li>
                        <a asp-action="EventsDetail" asp-controller="Sports">Sports</a>

                    </li>
                    <li><a asp-controller="Clubs" asp-action="Clubdetails">Clubs</a></li>
                    <li><a asp-controller="Home" asp-action="Contactus">Contactus</a></li>&nbsp;&nbsp;&nbsp;&nbsp;
                    @if (Context.Session.GetString("EnrollmentId") != null)
                    {

                        <li><b>Welcome <b>@Context.Session.GetString("EnrollmentId")</b></b></li>

                        <li><a id="loginout" asp-controller="Login" asp-action="Logout" class="getstarted">Logout</a></li>
                    }
                    else
                    {
                        <li><a id="loginout" asp-controller="Login" asp-action="Login" class="getstarted">Login</a></li>
                    }
                    
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header>

    @RenderBody();

